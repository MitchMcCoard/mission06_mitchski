@{
    ViewData["Title"] = "Delete Application";
}

@model Movie

<h2>Confirmation</h2>
<h3>Are you sure you want to delete the @Model.Title @Model.Year movie entry?</h3>


<form asp-action="Delete" method="post">
    <a asp-controller="Home" asp-action="Catalog" class="btn btn-primary">Cancel</a>
    &emsp;
    <button type="submit" class="btn-danger">Delete</button>
    <input type="hidden" asp-for="MovieId" />

</form>